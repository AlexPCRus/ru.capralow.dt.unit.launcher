<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	
	<extension point="org.eclipse.xtext.builder.participant">
		<participant
			class="ru.capralow.dt.unit.launcher.plugin.ui.UnitLauncherExecutableExtensionFactory:ru.capralow.dt.unit.launcher.plugin.ui.UnitLauncherXtextBuilderParticipant"
			fileExtensions="bsl">
		</participant>
	</extension>
	
	<extension point="org.eclipse.ui.commands">
		<command
			id="ru.capralow.dt.unit.launcher.plugin.ui.commands.OpenFeaturesDirectory"
			name="Открыть каталог с модульными тестами">
		</command>
	</extension>
	<extension point="org.eclipse.ui.handlers">
		<handler
			commandId="ru.capralow.dt.unit.launcher.plugin.ui.commands.OpenFeaturesDirectory"
			class="ru.capralow.dt.unit.launcher.plugin.ui.UnitLauncherExecutableExtensionFactory:ru.capralow.dt.unit.launcher.plugin.ui.OpenFeaturesDirectoryHandler">
		</handler>
	</extension>
	<extension point="org.eclipse.ui.menus">
		<menuContribution
			locationURI="popup:com._1c.g5.v8.dt.navigator.ui.navigator.popup">
			<command
				commandId="ru.capralow.dt.unit.launcher.plugin.ui.commands.OpenFeaturesDirectory"
				style="push"
				label="Открыть каталог с модульными тестами">
 
				<visibleWhen>
					<and>
						<count value="+" />
						<iterate operator="or">
							<instanceof value="com._1c.g5.v8.dt.metadata.mdclass.Configuration" />
						</iterate>
					</and>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>
	
	<extension point="org.eclipse.debug.core.launchConfigurationTypes">
		<launchConfigurationType
			name="Модульные тесты 1С"
			delegate="ru.capralow.dt.unit.launcher.plugin.ui.UnitLauncherLaunchConfigurationDelegate"
			modes="run, debug"
			id="ru.capralow.dt.unit.launcher.plugin.ui.UnitLauncher">
		</launchConfigurationType>
	</extension>
	<extension point="org.eclipse.debug.ui.launchConfigurationTabGroups">
		<launchConfigurationTabGroup
			class="ru.capralow.dt.unit.launcher.plugin.ui.UnitLauncherLaunchConfigurationTabGroup"
			id="ru.capralow.dt.unit.launcher.plugin.ui.UnitLauncherLaunchConfigurationTabGroup"
			type="ru.capralow.dt.unit.launcher.plugin.ui.UnitLauncher">
		</launchConfigurationTabGroup>
	</extension>

</plugin>